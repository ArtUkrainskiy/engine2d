find_path(GPERFTOOLS_INCLUDE_DIR NAMES gperftools/profiler.h)
find_library(GPERFTOOLS_LIBRARY NAMES libprofiler.so)

set(GPERFTOOLS_FOUND TRUE)

if (NOT GPERFTOOLS_INCLUDE_DIR OR NOT GPERFTOOLS_LIBRARY)
    set(GPERFTOOLS_FOUND FALSE)
